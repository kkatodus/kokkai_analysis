        {
            "speech_id": "118015261X01720120403_506",
            "house_name": "参議院",
            "meeting_name": "予算委員会",
            "date": "2012-04-03",
            "speech_url": "https://kokkai.ndl.go.jp/txt/118015261X01720120403/506",
            "speaker_group": "公明党",
            "extracted_opinions": [
